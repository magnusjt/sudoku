{
  "name": "sudoku-core",
  "version": "1.0.0",
  "description": "core sudoku logic",
  "main": "lib",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "watch:build": "tsc -w --preserveWatchOutput --incremental",
    "build": "tsc",
    "lint": "eslint src",
    "generate": "node --experimental-specifier-resolution=node --loader ts-node/esm ./generate.ts",
    "combine": "node --experimental-specifier-resolution=node --loader ts-node/esm ./combine.ts",
    "reanalyze": "node --experimental-specifier-resolution=node --loader ts-node/esm ./reanalyze.ts"
  },
  "eslintConfig": {
    "plugins": ["@typescript-eslint"],
    "extends": "plugin:@typescript-eslint/recommended",
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "semi": ["error", "never"]
    }
  },
  "dependencies": {
    "typescript": "4.1.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "@typescript-eslint/parser": "4.15.1",
    "ts-node": "^9.1.1",
    "eslint": "7.19.0"
  }
}
